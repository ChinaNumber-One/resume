/* miniprogram/pages/userCenter/versionInfo/versionpage.wxss */
.head-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
  background: #fff;
  border-bottom: 8rpx solid #eee;
}
.logo-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}
.CH-name {
  font-size: 40rpx;
  font-weight: bolder;
  margin-top: 24rpx;
}
.EN-name {
  font-size: 28rpx;
  color: #666;
}
.version {
  font-size: 32rpx;
  font-weight: bolder;
  margin-top: 8rpx;
}
.list {
  padding: 32rpx;
}
.list-title {
  font-size: 32rpx;
  font-weight: bolder;
  margin-bottom: 24rpx;
}
.item {
  margin-top: 12rpx;
  border-bottom: 1rpx solid #eee;
  padding: 12rpx 0;
  padding: 0 24rpx;
}
.version-no {
  font-size: 32rpx;
  font-weight:bold;
}
.update-time {
  color: #666;
  font-size: 24rpx;
}
.tip {
  color: #666;
  font-size: 24rpx;
  margin-top: 12rpx;
  text-indent: 24rpx;
  position: relative;
  line-height: 36rpx;
}
.tip::after {
  content: '';
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 12rpx;
  height: 12rpx;
  background: #666;
  border-radius: 6rpx;
}
.item:last-child{
  border: none;
}