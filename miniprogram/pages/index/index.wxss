/* miniprogram/pages/index/index.wxss */
.list {
  padding: 12rpx ;
  background-color: #eee;
  width: 100%;
  box-sizing: border-box;
}
.page-box {
  background: #eee;
}
.coverImg {
  width: 100%;
  height: calc( (100vw - 40rpx)/2*410/270 );
  display: block;
}
.item {
  position: relative;
  width: calc( (100vw - 40rpx)/2 );
  background-color: #fff;
  border-radius: 12rpx;
  display: inline-block;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.item:nth-of-type(2n+1) {
  margin-right: 16rpx;
}
.btn-box {
  justify-content: space-evenly;
}
.tag {
  width: 190rpx;
  line-height: 32rpx;
  background: #e7525c;
  transform: rotate(-45deg);
  position: absolute;
  top: 28rpx;
  left: -48rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  box-shadow: 0rpx 0rpx 6rpx 4rpx #e7525c;
}

.no-data {
  text-align: center;
  color: #999;
}
.no-template {
  width: 180rpx;
  height: 116rpx;
  margin: 80rpx auto 32rpx;
}
.btn-view {
  width: 50%;
  height: 48rpx;
  border: none;
  background: #1989fa;
  border-radius: 0;
  margin: 0;
  padding: 0;
  color: #fff;
  font-size: 24rpx;
  line-height: 48rpx;
}

.btn-use {
  width: 50%;
  height: 48rpx;
  border: none;
  background: #07c160;
  border-radius: 0;
  font-size: 24rpx;
  line-height: 48rpx;
  margin: 0;
  padding: 0;
  color: #fff;
}
.btn-use::after ,
.btn-view::after {
  display: none;
}