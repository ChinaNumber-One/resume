/* miniprogram/pages/index/index.wxss */
.list {
  padding: 12rpx ;
  background-color: #eee;
  width: 100%;
  min-height: calc( 100vh - 100rpx );
  box-sizing: border-box;
}
.coverImg {
  width: 100%;
  height: calc( (100vw - 40rpx)/2*410/270 );
}
.item {
  position: relative;
  width: calc( (100vw - 40rpx)/2 );
  background-color: #fff;
  padding-bottom: 16rpx;
  border-radius: 12rpx;
  display: inline-block;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.item:nth-of-type(2n+1) {
  margin-right: 16rpx;
}
.btn-box {
  margin-top: 12rpx;
  justify-content: space-evenly;
}
.item-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
}
.expect-img {
  width: 200rpx;
  height: 200rpx;
}
.tag {
  width: 190rpx;
  line-height: 32rpx;
  background: #e7525c;
  transform: rotate(-45deg);
  position: absolute;
  top: 28rpx;
  left: -48rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  box-shadow: 0rpx 0rpx 6rpx 4rpx #e7525c;
}

.no-data {
  text-align: center;
  color: #999;
}
.no-template {
  width: 214rpx;
  height: 140rpx;
  margin: 80rpx auto 32rpx;
}
