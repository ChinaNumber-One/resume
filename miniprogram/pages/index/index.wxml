<view class="container">
  <van-dropdown-menu active-color="#e7525c">
    <van-dropdown-item value="{{ type }}" bindchange="changeType" options="{{ option1 }}" />
    <van-dropdown-item value="{{ sort }}" bindchange="changeSort" options="{{ option2 }}" />
  </van-dropdown-menu>
  <view class='list' wx:if="{{templateList.length && loadSuccess}}">
    <view class='item' wx:for="{{templateList}}" wx:for-item="temp" wx:for-index="i" wx:key="_id">
      <image src="{{temp.coverImg}}" class='coverImg'></image>
      <view class='btn-box flex-row'>
        <van-button size="mini" disabled="{{temp.state !=='1'}}" type="info" open-type="getUserInfo" bindgetuserinfo="getUserInfo" data-type="view" data-code="{{temp.code}}" data-url="{{temp.url}}">预览({{temp.viewNum<100?temp.viewNum:'99+'}})</van-button>
        <van-button size="mini" disabled="{{temp.state !=='1'}}" type="primary" open-type="getUserInfo" bindgetuserinfo="getUserInfo" data-type="use" data-code="{{temp.code}}">使用({{temp.useNum<100?temp.useNum:'99+'}})</van-button>
      </view>
      <view class='tag' wx:if="{{temp.state ==='0'}}">即将上线</view>
      <view class='tag' wx:if="{{temp.state ==='2'}}">已下线</view>
      <view class='tag' wx:if="{{temp.state ==='1'&&temp.tag}}">{{temp.tag}}</view>
    </view>
  </view>
  <view wx:if="{{templateList.length === 0 && loadSuccess}}" class="list no-data">
    <image src='../../images/no-data.png' class='no-template'></image>
    <view>暂无模版</view>
  </view>
</view>