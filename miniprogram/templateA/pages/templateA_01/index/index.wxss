/* miniprogram/pages/introduction/introduction.wxss */

.page-content-border {
  margin: 48rpx;
  height: calc( 100vh - 96rpx );
  width: calc( 100vw - 96rpx );
  border: 1px dashed #FA5845;
  border-radius: 32rpx;
  box-sizing: border-box;
  padding: 32rpx;
}
.page-content-resume-text {
  text-align: center;
  font-size: 32rpx;
  font-weight: 300; 
  margin-bottom: 20rpx;
}
.page-content-resume-title {
  background-color: #FA5845;
  border-radius: 12rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #fff;
  width: 280rpx;
  text-align: center;
  color: #fff;
  margin: 0 auto;
  font-weight: 300;
  margin-bottom: 32rpx;
}
.bottom-img {
  position: fixed;
  bottom: 64rpx;
  left: 15vw;
  width: 70vw;
  height: 170rpx;
}
.head-img {
  width: 220rpx;
  height: 308rpx;
  display: block;
  margin-right: 32rpx;
  /* box-shadow: -8rpx -6rpx 6rpx 0rpx rgba(0,0,0,.7); */
  flex-shrink: 0;
  /* border: 1px solid #F05c40; */
}
.text{
  font-weight: 400;
  color: #F05c40;
  line-height: 20px;
  font-size: 12px;
  word-break: break-all;
}
.head-info {
  flex:1;
  align-items: flex-start;
  height: 308rpx;
  justify-content: space-evenly;
}
.evaluate {
  height: calc( 100vh - 780rpx );
  overflow: auto;
}
.progress-box {
  width: 100%;
  background: #ddd;
  height: 16rpx;
  border-radius: 8rpx;
  width: 80%;
}
.skill-item-name {
  font-size: 32rpx;
  font-weight: 900;
  margin-bottom: 4rpx;
}
.skill-item-desc {
  font-size: 24rpx;
  font-weight: 400;
  color: #666;
  margin-bottom: 8rpx;
}
.progress-item {
  border-radius: 8rpx;
  height: 16rpx;
  position: relative;
  width: 0;
  transition: .2s;
}
.skill-item {
  margin-bottom: 24rpx;
}
.skill-value {
  font-size: 24rpx;
  line-height: 28rpx;
  color: #000;
  text-align: center;
  flex:1;
}
.skill-list,
.work-experience {
  height: calc( 100vh - 426rpx );
  overflow: auto;
}
.collapse-title {
  position: sticky;
  top: 250rpx;
  left: 0;
}


