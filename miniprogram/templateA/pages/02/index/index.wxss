.A_02 .cover-item {
  width: 50vw;
  height: 50vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  position: absolute;
}
.A_02 .cover-box {
  width: 100vw;
  background: #fff;
  height: 100vh;
  position: relative;
}
.A_02 .cover-item-1 {
  background: #f5f5f5;
  top: 0;
  left: 0;
  z-index: 1;
}
.A_02 .cover-item-1::after {
  content: '';
  position: absolute;
  height: 100%;
  top: 0;
  right: -64rpx;
  width: 32rpx;
  background: #000;
  border-right: 32rpx solid #f5f5f5;
}
.A_02 .cover-item-4::after {
  content: '';
  position: absolute;
  height: 100%;
  top: 0;
  left: -64rpx;
  width: 32rpx;
  background: #f5f5f5;
  border-left: 32rpx solid #000;
}
.A_02 .cover-item-2::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 32rpx;
  bottom: -64rpx;
  right: 0;
  background: #f5f5f5;
  border-bottom: 32rpx solid #000;
}
.A_02 .cover-item-3::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 32rpx;
  top: 0;
  left: -64rpx;
  background: #000;
  border-right: 32rpx solid #f5f5f5;
}
.A_02 .cover-item-4 {
  background: #f5f5f5;
  bottom: 0;
  right: 0;
  z-index: 3;
}
.A_02 .cover-item-2 {
  background: #000;
  right: 0;
  top: 0;
  z-index: 2;
}
.A_02 .cover-item-3 {
  background: #000;
  left: 0;
  bottom: 0;
  z-index: 4;
}


.A_02 .cover-img {
  width: 70%;
}
.A_02 .center-title {
  font-size: 52rpx;
  background: #fff;
  line-height: 100rpx;
  height: 100rpx;
  width: 460rpx;
  text-align: center;
  border-radius: 50rpx;
  position: fixed;
  font-weight: bolder;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0rpx 0rpx 16rpx 4rpx #999;
  z-index: 10;
}

.A_02 .base-title-en{
  width: 500rpx;
  height: 500rpx;
  padding: 0 64rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #000;
  color: #fff;
  font-size: 44rpx;
  font-weight: 900;
  box-sizing: border-box;
}
.A_02 .base-title-ch {
  writing-mode: vertical-lr;
  width: 250rpx;
  height: calc(100vh - 500rpx);
  background: #000;
  color: #fff;
  font-weight: 900;
  font-size: 64rpx;
  text-align: center;
  letter-spacing: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.A_02 .base-title-ch view {
  width: 92rpx;
}
.A_02 .base-info-box {
  padding: 0 64rpx;
  width: 500rpx;
  box-sizing: border-box;
  height: calc(100vh - 500rpx);
}
.A_02 .base-info-box view {
  width: 100%;
  text-align: left;
  margin-bottom: 24rpx;
}
.A_02 .head-img {
  width: 248rpx;
  height: 332rpx;
  border: 8rpx solid #fff;
  box-shadow: 0rpx 0rpx 8rpx 8rpx rgba(0,0,0,.4);
  position: absolute;
  right: 56rpx;
  top: 76rpx;
  z-index: 10;
  background: #ddd;
}
