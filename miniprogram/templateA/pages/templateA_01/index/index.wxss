.page-title {
  width: 60vw;
  margin: 0vh auto 32rpx;
  text-align: center;
  font-size: 128rpx;
  font-weight: 400;
  line-height: 144rpx;
  position: relative;
}
.card-box {
  width: 70%;
  border-radius: 32rpx;
  min-height: 300rpx;
  border: 1px solid #FA5845;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  font-weight: 500;
  color: #F05c40;
  line-height: 64rpx;
  padding-top: 32rpx;
  box-sizing: border-box;
  font-weight: 300;
  margin-bottom:259rpx;
}
.card-box-title {
  position: absolute;
  padding: 14rpx 8rpx;
  line-height: 32rpx;
  width: 70%;
  color: #fff;
  background: #FA5845;
  border-radius: 8rpx;
  margin: 0 auto;
  top: -30rpx;
  left: 15%;
  box-sizing: border-box;
}
.card-box-title-text {
  /* white-space: nowrap;
  overflow: hidden;
