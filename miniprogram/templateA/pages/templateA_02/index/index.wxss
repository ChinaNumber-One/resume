/* templateA/pages/templateA_02/index/index.wxss */
.cover-item {
  width: 50vw;
  height: 50vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  position: absolute;
}
.cover-box {
  background: #fff;
  height: 100vh;
  position: relative;
}
.cover-item-1 {
  background: #f5f5f5;
  top: 0;
  left: 0;
  z-index: 1;
}
.cover-item-1::after {
  content: '';
  position: absolute;
  height: 100%;
  top: 0;
  right: -64rpx;
  width: 32rpx;
  background: #000;
  border-right: 32rpx solid #f5f5f5;
}
.cover-item-4::after {
  content: '';
  position: absolute;
  height: 100%;
  top: 0;
  left: -64rpx;
  width: 32rpx;
  background: #f5f5f5;
  border-left: 32rpx solid #000;
}
.cover-item-2::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 32rpx;
  bottom: -64rpx;
  right: 0;
  background: #f5f5f5;
  border-bottom: 32rpx solid #000;
}
.cover-item-3::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 32rpx;
  top: 0;
  left: -64rpx;
  background: #000;
  border-right: 32rpx solid #f5f5f5;
}
.cover-item-4 {
  background: #f5f5f5;
  bottom: 0;
  right: 0;
  z-index: 3;
}
.cover-item-2 {
  background: #000;
  right: 0;
  top: 0;
  z-index: 2;
}
.cover-item-3 {
  background: #000;
  left: 0;
  bottom: 0;
  z-index: 4;
}


.cover-img {
  width: 70%;
}
.center-title {
  font-size: 52rpx;
  background: #fff;
  line-height: 100rpx;
  height: 100rpx;
  width: 460rpx;
  text-align: center;
  border-radius: 50rpx;
  position: fixed;
  font-weight: bolder;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  box-shadow: 0rpx 0rpx 16rpx 4rpx #999;
  z-index: 10;
}