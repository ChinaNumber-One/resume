}
.resume-text {
  text-align: center;
  font-size: 52rpx;
  font-weight: 300;
  margin-bottom: 5vh;
}
.bottom-img-s {
  position: absolute;
  bottom: 48rpx;
  left: 80rpx;
  width: calc( 100vw - 160rpx);
  height: calc( (100vw - 160rpx)*212/645);
  z-index: 1;
}
.experience-box {
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}
.experience-title {
  font-size: 32rpx;
  font-weight: bold;
  line-height: 32rpx;
  padding: 8rpx 0;
}
.experience-tips {
  padding: 12rpx;
}
.experience-tips-item {
  line-height: 36rpx;
  font-size: 28rpx;
  position: relative;
  color: #666;
  text-indent: 12rpx;
}
.experience-tips-item::after {
  content: '';
  position: absolute;
  top: 12rpx;
  left: -10rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #666;
}
.view-qrcode-btn {
  color: cornflowerblue;
  font-size: 24rpx;
}
.url-str {
  font-size: 24rpx;
  color: cornflowerblue;
}
.url-str text {
  color: #333;
  margin-left: 32rpx;
}
.img-9-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.img-9-item {
  width: 192rpx;
  height: 192rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  box-sizing: border-box;
  margin-bottom: 12rpx;
}
.img-9-item:nth-child(3n-1) {
  margin: 0 12rpx 12rpx;
}