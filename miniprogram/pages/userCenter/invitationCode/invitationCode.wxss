/* miniprogram/pages/userCenter/invitationCode/invitationCode.wxss */
.title {
  padding: 64rpx 32rpx;
  font-size: 36rpx;
  font-weight: bolder;
  text-align: center;
  align-items: center;
}

.code-box {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 0 32rpx;
  position: relative;
}

.input {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #1989fa;
  border-radius: 8rpx;
  text-align: center;
  line-height: 64rpx;
  box-sizing: border-box;
  padding: 8rpx;
}

.real-input {
  display: block;
  opacity: 0;
  position: absolute;
  z-index: -999;
  left: -9999px;
}
.submit-btn {
  background: linear-gradient(to right, #ffa535, #e7525c);
  color: #fff;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  position: fixed;
  bottom: 80rpx;
  left: 64rpx;
  right: 64rpx;
  border-radius: 44rpx;
}
.disabled {
  background: #999;
}
.disbled-border .input {
  color: #999;
  border-color: #999;
}
.tips {
  font-size: 24rpx;
  color: #666;
  margin-top: 64rpx;
  padding: 0 32rpx;
}